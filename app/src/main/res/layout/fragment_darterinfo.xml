<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7">

    <ImageView
        android:id="@+id/darter_icon"
        android:layout_height="58dp"
        android:layout_width="58dp"
        android:src="@drawable/me"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="38dp"/>

    <TextView
        android:id="@+id/tx_name_label"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="镖手名"
        android:gravity="right|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/darter_icon">

    </TextView>

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:background="#fff"
        app:layout_constraintLeft_toRightOf="@+id/tx_name_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/tx_name_label"
        >

    </EditText>
    <TextView
        android:id="@+id/tx_sex_label"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="性别"
        android:gravity="right|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_name_label">

    </TextView>
    <Spinner
        android:id="@+id/sp_sex"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:prompt="男"
        android:entries="@array/sexs"
        android:layout_marginLeft="10dp"
        android:background="#fff"
        app:layout_constraintLeft_toRightOf="@+id/tx_sex_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/tx_sex_label"></Spinner>
    <TextView
        android:id="@+id/tx_age_label"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="年龄"
        android:gravity="right|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_sex_label">

    </TextView>

    <EditText
        android:id="@+id/edt_age"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tx_age_label"
        app:layout_constraintBaseline_toBaselineOf="@+id/tx_age_label"
        >

    </EditText>
    <TextView
        android:id="@+id/tx_synopsis_label"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="简介"
        android:gravity="right|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_age_label">

    </TextView>

    <EditText
        android:id="@+id/edt_synopsis"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tx_synopsis_label"
        app:layout_constraintTop_toTopOf="@+id/tx_synopsis_label"
        >

    </EditText>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="38dp"
        android:text="添加"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>