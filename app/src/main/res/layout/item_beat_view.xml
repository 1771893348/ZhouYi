<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <RelativeLayout
        android:id="@+id/rlt_darter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_darter_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/me"
            ></ImageView>
            <LinearLayout
                android:id="@+id/lnt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignBaseline="@id/img_darter_icon"
                android:layout_toRightOf="@id/img_darter_icon"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:id="@+id/tv_darter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:text="wgw"></TextView>
                <TextView
                    android:id="@+id/tv_darter_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    android:layout_marginLeft="20dp"
                    android:text="男"></TextView>

            </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_darter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

            <LinearLayout
                android:id="@+id/lnt_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignBaseline="@id/img_darter2_icon"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_darter2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28dp"
                    android:text="wgw"></TextView>
                <TextView
                    android:id="@+id/tv_darter2_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32dp"
                    android:layout_marginLeft="20dp"
                    android:text="男"></TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_darter2_icon"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/me"
                android:layout_toRightOf="@id/lnt_name2"
                ></ImageView>
    </RelativeLayout>
</RelativeLayout>